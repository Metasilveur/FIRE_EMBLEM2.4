        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:testOnly="false">

        <activity android:name=".view.MainActivity">

        </activity>

        <activity android:name=".view.SecondActivity">

        </activity>

        <activity android:name=".view.ThirdActivity">

        </activity>

        <activity android:name=".view.SelectActivity">

        </activity>

        <activity android:name=".view.SelectCharacter">

        </activity>

        <activity android:name=".view.BattleActivity">

        </activity>

        <activity android:name=".view.BattleActivityDynamic">

        </activity>

        <activity android:name=".view.Title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".controller.MessageReceiver">
        <intent-filter>
            <action android:name="com.google.firebase.MESSAGING_EVENT" />
        </intent-filter>
        </service>
    <service android:name=".controller.InstanceIdService">
    <intent-filter>
        <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
    </intent-filter>
    </service>

    </application>

